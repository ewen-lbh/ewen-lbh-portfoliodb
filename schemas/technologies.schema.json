{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/ortfo/db/v0.3.1/schemas/technologies.schema.json",
  "$ref": "#/$defs/technologies",
  "$defs": {
    "Technology": {
      "properties": {
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "by": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "learn more at": {
          "type": "string"
        },
        "aliases": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "files": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "autodetect": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "slug",
        "name",
        "by",
        "description",
        "learn more at",
        "aliases",
        "files",
        "autodetect"
      ]
    },
    "technologies": {
      "items": {
        "$ref": "#/$defs/Technology"
      },
      "type": "array"
    }
  }
}
